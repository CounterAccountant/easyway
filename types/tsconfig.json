{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": [ "es2016" ],
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
  },
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}